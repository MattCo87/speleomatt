{% extends 'base.html.twig' %}

{% block title %}Page de jeu
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h2>{{ fight.log }}</h2>
		<ul>
			<li>{{ formation0.name }}</li>
			<ul>
				{% set i = 0 %}
				{% for character in characters0 %}
					<li>
						{{ character.characters.name }}
						(N째{{ character.characters.id }}) (Position:
						{{ character.positionCharacter }}) :
					</li>
					<ul>
						{% for strategy in strategies0[i] %}
							<li>
								{{ strategy.strategies.name }} (N째: {{ strategy.strategies.id }})
							</li>
						{% endfor %}
					</ul>
					{% set i = i + 1 %}
				{% endfor %}
			</ul>
	
			<li>{{ formation1.name }}</li>
			<ul>
				{% set i = 0 %}
				{% for character in characters1 %}
					<li>
						{{ character.characters.name }}
						(N째{{ character.characters.id }}) (Position:
						{{ character.positionCharacter }}) :
					</li>
					<ul>
						{% for strategy in strategies1[i] %}
							<li>
								{{ strategy.strategies.name }} (N째: {{ strategy.strategies.id }})
							</li>
						{% endfor %}
					</ul>
					{% set i = i + 1 %}
				{% endfor %}
			</ul>
		</ul>
	</div>
{% endblock %}
